{{- $data := partial "podcasts/episode-data" . -}}
{
  "podcast": {
    "title": {{ .Site.Params.podcast.title | jsonify }},
    "description": {{ .Site.Params.podcast.description | jsonify }},
    "author": {{ .Site.Params.podcast.author | jsonify }},
    "email": {{ .Site.Params.podcast.email | jsonify }},
    "host": {{ .Site.Params.podcast.host | jsonify }},
    "hostAvatar": {{ .Site.Params.podcast.hostAvatar | jsonify }},
    "language": {{ .Site.Params.podcast.language | default .Site.LanguageCode | jsonify }},
    "image": {{ .Site.Params.podcast.image | jsonify }},
    "category": {{ .Site.Params.podcast.category | jsonify }},
    "subcategory": {{ .Site.Params.podcast.subcategory | jsonify }},
    "explicit": {{ .Site.Params.podcast.explicit | default false }},
    "owner_name": {{ .Site.Params.podcast.owner_name | jsonify }},
    "owner_email": {{ .Site.Params.podcast.owner_email | jsonify }}
  },
  "uuid": {{ $data.uuid | jsonify }},
  "title": {{ $data.title | jsonify }},
  "subtitle": {{ $data.subtitle | jsonify }},
  "slug": {{ $data.slug | jsonify }},
  "episode_number": {{ $data.episode_number }},
  "season": {{ $data.season }},
  "status": {{ cond $data.draft "draft" "published" | jsonify }},
  "published_at": {{ $data.date.Format "2006-01-02T15:04:05Z07:00" | jsonify }},
  "last_modified": {{ $data.lastmod.Format "2006-01-02T15:04:05Z07:00" | jsonify }},
  "explicit": {{ $data.explicit }},
  "episode_type": {{ $data.episode_type | jsonify }},
  "description": {{ $data.description | jsonify }},
  "audio": {
    "url": {{ $data.audio.url | jsonify }},
    "format": {{ $data.audio.format | jsonify }},
    "file_size_bytes": {{ $data.audio.file_size }},
    "duration_seconds": {{ $data.audio.duration }}
  },
  "image": {{ $data.image | jsonify }},
  "chapters": {{ if $data.hasChapters }}{ "version": "1.2.0", "chapters": {{ $data.chapters | jsonify }} }{{ else }}null{{ end }},
  "keywords": {{ $data.tags | jsonify }},
  "categories": {{ $data.categories | jsonify }},
  "guests": {{ $data.guests | jsonify }},
  "hosts": {{ $data.hosts | jsonify }}
}